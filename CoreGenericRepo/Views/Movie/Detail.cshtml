@model CoreGenericRepo.Models.DTO.MovieVM

@{
    var title = "Film Detayı";
}




<form method="post">
    <div class="row border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Movies.MovieID" />
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movies.MovieImage" class="form-control"></label>
                </div>
                <div class="col-8">
                    <img src="~/img/@Model.Movies.MovieImage" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movies.MovieID" class="form-control"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movies.MovieID" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movies.MovieName" class="form-control"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movies.MovieName" class="form-control" readonly/>
                    <span asp-validation-for="Movies.MovieName" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movies.MovieDescription" class="form-control"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movies.MovieDescription" class="form-control" readonly/>
                    <span asp-validation-for="Movies.MovieDescription" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movies.MovieType.MovieTypeName" class="form-control"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movies.MovieType.MovieTypeName" class="form-control" readonly/>
                    <span asp-validation-for="Movies.MovieType.MovieTypeName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>

                </div>
            </div>
        </div>
    </div>
</form>