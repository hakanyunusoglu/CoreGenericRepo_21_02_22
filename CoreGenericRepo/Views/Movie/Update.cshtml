@model CoreGenericRepo.Models.DTO.MovieVM


@{
    var title = "Film Güncelle";
}

<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Movies.MovieID" />
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 p-4">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movies.MovieName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movies.MovieName" class="form-control" />
                    <span asp-validation-for="Movies.MovieName" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movies.MovieDescription"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movies.MovieDescription" class="form-control" />
                    <span asp-validation-for="Movies.MovieDescription" class="text-danger"></span>
                </div>
            </div>
              <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movies.MovieImage"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Movies.MovieImage" class="form-control" />
                    <p>Example: moviename.jpg</p>
                    <span asp-validation-for="Movies.MovieImage" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Movies.MovieTypeID"></label>
                </div>
                <div class="col-8">
                    <select class="form-control" id="exampleFormControlSelect1" asp-for="Movies.MovieTypeID" asp-items="@(new SelectList(Model.mtList,"MovieTypeID","MovieTypeName"))">
        <option value="0">--- Tür Seçiniz ---</option>
    </select>
                    <span asp-validation-for="Movies.MovieImage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <button type="submit" class="btn btn-primary form-control">Güncelle</button>
                </div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>
                </div>
            </div>
        </div>
    </form>
</div>