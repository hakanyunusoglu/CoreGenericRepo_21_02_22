@model CoreGenericRepo.Models.DTO.MovieVM


@{
    var title = "Tür Oluştur";
}

<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MovieTypes.MovieTypeID" />
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 p-4">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MovieTypes.MovieTypeName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MovieTypes.MovieTypeName" class="form-control" />
                    <span asp-validation-for="MovieTypes.MovieTypeName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <button type="submit" class="btn btn-primary form-control">Oluştur</button>
                </div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>
                </div>
            </div>
        </div>
    </form>
</div>