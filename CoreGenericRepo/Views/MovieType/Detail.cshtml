@model CoreGenericRepo.Models.DTO.MovieVM

@{
    var title = "Tür Detayı";
}




<form method="post">
    <div class="row border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MovieTypes.MovieTypeID" />
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MovieTypes.MovieTypeID" class="form-control"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MovieTypes.MovieTypeID" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MovieTypes.MovieTypeName" class="form-control"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MovieTypes.MovieTypeName" class="form-control" readonly/>
                    <span asp-validation-for="MovieTypes.MovieTypeName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <button type="submit" class="btn btn-primary form-control">Güncelle</button>
                </div>
                <div class="col-8">
                    <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>

                </div>
            </div>
        </div>
    </div>
</form>